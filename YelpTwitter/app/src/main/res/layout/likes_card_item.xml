<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:clickable="true"
                                    android:background="#5ea2e9"
                                    android.support.v7.cardview:cardBackgroundColor="#ffffff"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Business Name"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_toEndOf="@+id/food_image"
            android:paddingTop="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:id="@+id/business_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Address/info"
            android:textSize="14sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/food_image"
            android:layout_below="@+id/business_name"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>